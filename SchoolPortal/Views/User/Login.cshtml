@{
    ViewData["Title"] = "Login Page";
}

<div class="text-center contain">
    <h1 class="display-4">Login</h1>
    <hr/>
    @{
        string msg = this.ViewData["msg"] as string;
    }
    <p> @msg </p>
    <form action="" class="was-validated" method="POST">
        <div class="mb-3 mt-3">
            <label for="uname" class="form-label">First Name:</label>
            <input type="text" class="form-control" id="fname" placeholder="Enter username" value="Omkar" name="fname" required>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="mb-3">
            <label for="pwd" class="form-label">Password:</label>
            <input type="password" class="form-control" id="pwd" placeholder="Enter password" value="Omkar03" name="pwd" required>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    
</div>
