@using model;
@using services;
@using controllers;
@using System.Collections.Generic;

@{
    ViewData["Title"] = "Admin";
}



<div class="text-center">

    <div align="center" class="text-capitalize">
    <h1 class="display-4">Admin List</h1>
    <hr />
    @{ 
        <table border="1">
            <caption>
                Admin List
            </caption>
            <thead align="center" border="1">
                <tr>
                    <th>Admin Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>User Name</th>
                    <th>Details</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            @{List<Admin>? allAdmins = this.ViewData["students"] as List<Admin>;
                <tbody align="center" border="1">
                    @foreach(Admin? std in allAdmins){
                        <tr>
                            <td> @std.AdminId </td>
                            <td> @std.FirstName </td>
                            <td> @std.LastName </td>
                            <td> @std.UserName </td>
                            <td><a href="" >Details</a></td>
                            <td><a href="" style="pointer-events: none">Edit</a></td>
                            <td><a href="" style="pointer-events: none">Delete</a></td>
                        </tr>
                    }
                </tbody>
            }
        </table>

        <p><a href="DisplayById">Search By Id?</a></p>
    }
</div>
