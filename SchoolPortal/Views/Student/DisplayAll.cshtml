@using model;
@using services;
@using controllers;
@using System.Collections.Generic;

@{
    ViewData["Title"] = "Student Page";
}


<div class="text-center">
    <div align="center" class="text-capitalize">
    <br/>
    
    </div>

    <div align="center" class="text-capitalize">
        <h1 class="display-4">Student List</h1>
        <hr />
        <form method="post">
            <label for="">Search: <input type="number" name="searchId" id="input" value="0" min="0"></label>
            <button type="submit">Search</button>
        </form>
        <br/>
        @{ 
            <table border="1">
                <caption>
                    Students List
                </caption>
                <thead align="center" border="1">
                    <tr>
                        <th>Student Id</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Date of Birth</th>
                        <th>Email ID</th>
                        <th>Details</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                @{List<Student>? allStudents = this.ViewData["students"] as List<Student>;
                    <tbody align="center" border="1">
                        @foreach(Student? std in allStudents){
                            <tr>
                                <td> @std.StudentId </td>
                                <td> @std.NameFirst </td>
                                <td> @std.NameLast </td>
                                <td> @std.DOB </td>
                                <td> @std.EmailId </td>
                                <td><a href="" >Details</a></td>
                                <td><a href="" style="pointer-events: none">Edit</a></td>
                                <td><a href="DeleteStudent/@std" >Delete</a></td>
                            </tr>
                        }
                    </tbody>
                }
            </table>
        }
    </div>
</div>
